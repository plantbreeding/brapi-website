<section class="module-extra-small">
    <div class="container">

        <div class="row" style="margin-bottom: 10px;">
            <h2>BrAPI V2</h2>
        </div>
        {{#each v2}}
        <div class="row brapi-section {{#if isCurrent}} current-brapi-section {{/if}} {{#if isPreview}} preview-brapi-section {{/if}}"
            style="padding: 7px 10px; border: 1px solid lightgray">
            <h3 class="brapi-section-title col-3 col-md-2">{{version}}<br />{{status}}</h3>
            <div class="col-9 col-md-10">
                <div class="row brapi-section">
                    <div class="brapi-section-description">
                        <p style="margin: 0 10px 0 10px;">{{{description}}}</p>
                    </div>
                    {{#each links}}
                    <div class="link-btn col-6 col-md-3 col-lg-2">
                        <a target="_blank" href="{{URL}}" class="btn btn-sm btn-outline-success col-12">{{label}}
                        </a>
                    </div>
                    {{/each}}
                </div>
            </div>

            <div class="brapp-details-btn" style="margin: 0 0 5px;">
                <button id="toggle-{{ version }}" class="btn btn-secondary btn-light-gray" type="button"
                    onclick="toggleVisible('id-{{ version }}', 'toggle-{{ version }}', 'Details', 'Details')">
                    {{#if isCurrent}}
                    <span class="mdi mdi-chevron-double-up"></span> Details <span
                        class="mdi mdi-chevron-double-up"></span>
                    {{else}}
                    <span class="mdi mdi-chevron-double-down"></span> Details <span
                        class="mdi mdi-chevron-double-down"></span>
                    {{/if}}
                </button>
            </div>

            <div id="id-{{ version }}" class="row brapi-section"
                style="background-color: white; {{#unless isCurrent}}display: none;{{/unless}}">
                <div class="col-12">
                    {{#each modules}}
                    <div class="row brapi-section">
                        <h4 class="brapi-section-subtitle col-3 col-lg-2">{{name}}</h4>
                        <div class="col">
                            <div class="brapi-section-description">{{description}}</div>
                            <div class="row">
                                <div class="link-btn col-6 col-md-3 col-lg-2">
                                    <a target="_blank" href="{{githubURL}}"
                                        class="btn btn-sm btn-outline-success col-12">GitHub
                                    </a>
                                </div>
                                <div class="link-btn col-6 col-md-3 col-lg-2">
                                    <a target="_blank" href="{{apiaryURL}}"
                                        class="btn btn-sm btn-outline-success col-12">Apiary
                                    </a>
                                </div>
                                <div class="link-btn col-6 col-md-3 col-lg-2">
                                    <a target="_blank" href="{{swaggerhubURL}}"
                                        class="btn btn-sm btn-outline-success col-12">SwaggerHub
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>

        </div>
        {{/each}}

        <hr class="divider-w">

        <div class="row">
            <h2>BrAPI V1</h2>
        </div>
        <div class="row">
            <div class="col-12">
                {{#each v1}}
                <div class="row brapi-section">
                    <h3 class="brapi-section-title col-3 col-md-2">{{version}}<br />{{status}}</h3>
                    <div class="col-9 col-md-10">
                        <div class="brapi-section-description">{{description}}</div>
                        <div class="row">
                            <div class="link-btn col-6  col-md-3 col-lg-2">
                                <a target="_blank" href="{{githubURL}}"
                                    class="btn btn-sm btn-outline-success col-12">GitHub
                                </a>
                            </div>
                            <div class="link-btn col-6  col-md-3 col-lg-2">
                                <a target="_blank" href="{{apiaryURL}}"
                                    class="btn btn-sm btn-outline-success col-12">Apiary
                                </a>
                            </div>
                            <div class="link-btn col-6  col-md-3 col-lg-2">
                                {{#if swaggerhubURL}}
                                <a target="_blank" href="{{swaggerhubURL}}"
                                    class="btn btn-sm btn-outline-success col-12">SwaggerHub
                                </a>
                                {{else}}
                                <div class="btn-sm btn-round col-12"
                                    style="background-color: lightgray; height: 30px;">
                                </div>
                                {{/if}}
                            </div>
                            <div class="link-btn col-6  col-md-3 col-lg-2">
                                <a target="_blank" href="{{releaseNotesURL}}"
                                    class="btn btn-sm btn-outline-success col-12">Release Notes
                                </a>
                            </div>
                            <div class="link-btn col-6  col-md-3 col-lg-2">
                                {{#if changeLogURL}}
                                <a target="_blank" href="{{changeLogURL}}"
                                    class="btn btn-sm btn-outline-success col-12">Change
                                    Log
                                </a>
                                {{else}}
                                <div class="btn-sm btn-round col-12"
                                    style="background-color: lightgray; height: 30px;">
                                </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <hr class="divider-w">

        <div class="row" style="margin: 10px 0;"">
            <h2 class="col-12" style="margin: 10px 0;">General Reference Documentation</h2>

            <div class="col-4 link-btn">
                <a target="_blank"
                    href="https://github.com/plantbreeding/API/blob/master/Specification/GeneralInfo/URL_Structure.md"
                    class="btn btn-sm btn-outline-success col-12">URL Structure </a>
            </div>
            <div class="col-4 link-btn">
                <a target="_blank"
                    href="https://github.com/plantbreeding/API/blob/master/Specification/GeneralInfo/Response_Structure.md"
                    class="btn btn-sm btn-outline-success col-12">Response Structure </a>
            </div>
            <div class="col-4 link-btn">
                <a target="_blank"
                    href="https://github.com/plantbreeding/API/blob/master/Specification/GeneralInfo/Date_Time_Encoding.md"
                    class="btn btn-sm btn-outline-success col-12">Date/Time Encoding </a>
            </div>
            <div class="col-4 link-btn">
                <a target="_blank"
                    href="https://github.com/plantbreeding/API/blob/master/Specification/GeneralInfo/Location_Encoding.md"
                    class="btn btn-sm btn-outline-success col-12">Location Encoding </a>
            </div>
            <div class="col-4 link-btn">
                <a target="_blank"
                    href="https://github.com/plantbreeding/API/blob/master/Specification/GeneralInfo/Error_Handling.md"
                    class="btn btn-sm btn-outline-success col-12">Error Handling </a>
            </div>
            <div class="col-4 link-btn">
                <a target="_blank"
                    href="https://github.com/plantbreeding/API/blob/master/Specification/GeneralInfo/Search_Services.md"
                    class="btn btn-sm btn-outline-success col-12">Search Services </a>
            </div>
        </div>
    </div>
</section>