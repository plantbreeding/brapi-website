<section class="module-extra-small" id="get-started-intro">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-11 col-md-4 col-lg-3" id="menu" style="margin-bottom: 20px;">
                {{#each pages}}
                <div style="margin-bottom: 1px;">
                    <a href="/get-started/{{ @index }}">
                        <button id="toggle-overview" class="btn btn-secondary btn-light-gray col-12" type="button">{{
                            title }}</button>
                    </a>
                </div>
                {{/each}}
            </div>
            <div class="col-12 col-md-8 col-lg-9" id="content">
                <h2 class="module-title font-alt" id="title" style="margin: 20px 0 15px 0;"> {{ page.title }} </h2>
                {{{ page.html }}}

                <div class="row justify-content-between">
                    <div class="col-6 col-md-5 col-lg-4" style="text-align: left;">
                        {{#if prevHref}}
                        <a href="{{ prevHref }}" class="btn btn-sm btn-outline-success col-12">
                            &lt;&lt; {{prevTitle}}
                        </a>
                        {{/if}}
                    </div>
                    <div class="col-6 col-md-5 col-lg-4" style="text-align: right;">
                        {{#if nextHref}}
                        <a href="{{ nextHref }}" class="btn btn-sm btn-outline-success col-12">
                            {{nextTitle}} &gt;&gt;
                        </a>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
</section>