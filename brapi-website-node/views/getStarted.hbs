<section class="module-small" id="get-started-intro">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 offset-sm-1">
                <div class="col-xs-4 col-md-3 col-xl-2" id="menu">
                    {{#each pages}}
                    <div>
                        <a href="/get-started/{{ @index }}">- {{ title }}</a>
                    </div>
                    {{/each}}
                </div>
                <div class="col-xs-8 col-md-9 col-xl-10" id="content">
                    <h2 class="module-title font-alt" id="title"> {{ page.title }} </h2>
                    {{{ page.html }}}

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-sm-1">
                {{#if prevHref}}
                <div class="col-sm-4 offset-sm-3" style="text-align: left;">
                    <a href="{{ prevHref }}">
                        <button class="btn btn-info btn-border-d btn-round" type="button">
                            &lt;&lt; {{ prevTitle }} </button>
                    </a>
                </div>
                <div class="col-sm-4 offset-sm-1" style="text-align: right;">
                    {{else}}
                    <div class="col-sm-4 offset-sm-8" style="text-align: right;">
                        {{/if}}
                        <a href="{{ nextHref }}">
                            <button class="btn btn-info btn-border-d btn-round" type="button">
                                {{ nextTitle }} &gt;&gt; </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
</section>