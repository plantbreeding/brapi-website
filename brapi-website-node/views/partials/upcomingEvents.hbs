<ul class="widget-posts" style="white-space: nowrap;" id="event-tags">
    {{#if footerEvents.event1}}
        <li class="clearfix">
            <a href="{{ footerEvents.event1.primary_link }}" class="brapi-link">
                <div class="widget-posts-image">
                    <img src="{{ footerEvents.event1.image }}" alt="{{ footerEvents.event1.title }} Thumbnail" />
                </div>
                <div class="widget-posts-body">
                    <div class="widget-posts-title">{{ footerEvents.event1.title }}</div>
                    <div class="widget-posts-meta">{{ footerEvents.event1.location }}</div>
                    <div class="widget-posts-meta">{{ footerEvents.event1.date }}</div>
                </div>
            </a>
        </li>
    {{/if}}
    {{#if footerEvents.event2}}
        <li class="clearfix">
            <a href="{{ footerEvents.event2.primary_link }}" class="brapi-link">
                <div class="widget-posts-image">
                    <img src="{{ footerEvents.event2.image }}" alt="{{ footerEvents.event2.title }} Thumbnail" />
                </div>
                <div class="widget-posts-body">
                    <div class="widget-posts-title">{{ footerEvents.event2.title }}</div>
                    <div class="widget-posts-meta">{{ footerEvents.event2.location }}</div>
                    <div class="widget-posts-meta">{{ footerEvents.event1.date }}</div>
                </div>
            </a>
        </li>
    {{/if}}
</ul>