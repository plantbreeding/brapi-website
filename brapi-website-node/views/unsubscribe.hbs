<section class="module-small" style="min-height: 470px;">
    <div class="container">
        <div class="row">
            <div id="mailingListUnsubscribeContainer"
                class="offset-xs-1 col-sm-10 offset-sm-2 col-sm-8 offset-md-3 col-md-6">
                <div class="col-sm-12" style="color: black;">
                    <h2 style="font-size: 16px;"> Unsubscribe from the BrAPI Mailing List </h2>
                </div>
                <div class="col-sm-12">
                    <form id="mailingListUnsubscribeForm">
                        <div class="col-sm-12"><label for="emailInput" style="font-weight: 600;">Email Address: </label></div>
                        <div class="col-sm-12"><input id="emailInput" type="text" name="email" style="width:100%" />
                        </div>
                        <div class="offset-sm-4 col-sm-4">
                            <input type="submit" value="Submit" class="btn btn-d btn-round"
                                style="margin-top: 10px; margin-bottom: 10px; width:100%;">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/plain"  cookie-consent="strictly-necessary">

    $(document).ready(function () {
        $("#mailingListUnsubscribeForm").submit(function (event) {
            $("#mailingListUnsubscribeContainer").html("<div style='margin: 30px 0 0 35px;'><div class='loader loader-dark'></div></div>");

            var req = $(this).serializeArray();
            $.post('/api/mailingListUnsubscribe', req, function (data, status) {
                console.log(data);
                $("#mailingListUnsubscribeContainer").html("<p style='color: black;'>You have been unsubscribed.</p>")
            });
            event.preventDefault();
        });
    });

</script>